//- Note that Jade takes care of sanitizing the input for us -- i.e.: HTML
//- carrot tags are transformed into literal carrot symbols.

table
  tr
    td(style='text-align: right; font-weight: bold;') Name
    td= contact['name']
  tr
    td(style='text-align: right; font-weight: bold;') E-mail Address
    td
      a(href='mailto:' + contact['email'] )= contact['email']
  tr
    td(style='text-align: right; font-weight: bold;') Phone Number
    td
      a(href='tel:' + contact['phone_area'] + contact['phone_prefix'] + contact['phone_suffix'] )= locals.form_helpers.phone_number_prettify( contact['phone_area'], contact['phone_prefix'], contact['phone_suffix'] )

  //- if contact['phone_ext'].length > 0
    tr
      td(style='text-align: right; font-weight: bold;') Phone Extension
      td= contact['phone_ext']
  //- tr
    td(style='text-align: right; font-weight: bold;') State
    td= contact['state']
  //- tr
    td(style='text-align: right; font-weight: bold;') Postal Code
    td= contact['zipcode']
  //- tr
    td(style='text-align: right; font-weight: bold;') Contact Preference
    td= contact['pref']

p(class='align_left')= contact['message']
